<%- include('partials/header'); -%>
<h1>Compose Blog</h1>
<form method="post">
    <div class="form-group">
      <label >Title</label>
      <input type="text" class="form-control"  name="postTitle" placeholder="Title Of your Blog">
    </div>
    
    <div class="form-group">
      <label >Post</label>
      <textarea class="form-control"  name="postBody" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

<%- include('partials/footer'); -%>